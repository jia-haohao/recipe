<br>
<h1 class="title">レシピグラマー一覧</h1>
<section class="container">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
                  <%= link_to user_path(user) do %>
                    <%= image_tag(user.profile_image.url, class: "profile_image") if user.profile_image.url %>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%= link_to user.name, user_path(user) %></div>
                </div>
              </div>
              <div class="content">
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>                