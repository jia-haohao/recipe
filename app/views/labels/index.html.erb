<div class = "container">
  <h1>ラベル</h1>

  <table>
    <thead>
      <tr>
        <th>特色</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @labels.each do |label| %>
        <tr>
          <td><%= label.name %></td>
          <td><%= link_to '詳細', label %></td>
          <td><%= link_to '編集', edit_label_path(label) %></td>
          <td><%= link_to '削除', label, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規ラベル', new_label_path %>  |
  <%= link_to 'レシピの編集画面へ', edit_cook_path(@cook) %>
</div>