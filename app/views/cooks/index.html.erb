<br>
<h1 class="title">レシピ一覧</h1>
<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @cooks.each do |cook| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to cook_path(cook) do%>
                  <%= image_tag cook.image.url if cook.image.url %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= image_tag(cook.user.profile_image.url, class: "profile_image") if cook.user.profile_image.url %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%= link_to cook.user.name, user_path(cook.user) %></div>
                </div>
              </div>

              <div class="content">
                <time><%= cook.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

