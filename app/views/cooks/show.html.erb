<br>
<h1 class="title">レシピ詳細</h1>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag @cook.image.url if @cook.image_url %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @cook.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>レシピ</th>
                </tr>
                <tr>
                  <td><%= simple_format @cook.describe %></td>
                </tr>
              </table>
              <% if @cook.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_cook_path(@cook), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            <%= @cook.user.name %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @cook.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@cook.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @cook.user.name %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>